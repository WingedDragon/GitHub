<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/search_result_recyclerView_item_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.liji.circleimageview.CircleImageView
                android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Picture"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="@string/login"/>

                <TextView
                    android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="@string/login"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/stars"/>

                    <TextView
                        android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Stars"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:singleLine="true"
                        tools:text="12" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/fork"/>

                    <TextView
                        android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Forks"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:singleLine="true"
                        tools:text="12"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user"/>

                    <TextView
                        android:id="@+id/repositories_fragment_RecyclerView_item_CardView_Owner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:singleLine="true"
                        tools:text="12" />
cc
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>